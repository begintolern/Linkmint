{
  "name": "linkmint",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "start": "prisma migrate deploy && next start",
    "lint": "next lint",
    "prisma": "prisma",
    "postinstall": "prisma generate",
    "check:routes": "node scripts/check-route-conflicts.mjs",
    "seed": "node scripts/prod-db-guard.cjs && tsx prisma/seed.ts",
    "prisma:seed": "node scripts/prod-db-guard.cjs && tsx prisma/seed.ts",
    "prisma:studio": "cross-env NODE_ENV=development prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "cross-env NODE_ENV=development prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:db-push": "node scripts/prod-db-guard.cjs && prisma db push",
    "prisma:reset": "node scripts/prod-db-guard.cjs && prisma migrate reset",
    "typecheck": "tsc --noEmit",
    "verify": "prisma validate && prisma format --check && tsc --noEmit",
    "normalize:sources": "tsx scripts/normalize-merchant-sources.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/client": "6.16.2",
    "@sendgrid/mail": "^8.1.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.1.1",
    "date-fns": "^3.3.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "next": "14.1.0",
    "next-auth": "4.24.11",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prisma": "6.16.2",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.4"
  }
}
