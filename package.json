{
  "name": "linkmint",
  "version": "1.0.0",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/env-check.js",
    "build": "next build",
    "start": "next start -p $PORT",
    "start:win": "cross-env PORT=3000 next start",

    "postinstall": "prisma generate",

    "prisma": "prisma",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",

    "health-check": "curl -fsS http://localhost:${PORT:-3000}/api/health || (echo \"Health check failed\" && exit 1)",
    "restart-hook": "npm run health-check || (echo \"Requesting restart\" && exit 1)"
  },

  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.13.0",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.268.0",
    "next": "14.1.0",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.3.1",
    "tsx": "^4.20.3",
    "typescript": "^5.4.0"
  },

  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "20.4.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^10.0.0",
    "eslint": "8.45.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2"
  },

  "engines": {
    "node": ">=20 <21"
  }
}
